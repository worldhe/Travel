<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryDark">
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageButton
                android:id="@+id/ib_scan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/main_scan"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@mipmap/main_header_sourch"
                android:layout_centerInParent="true"
                android:paddingLeft="40dp"
                android:paddingRight="10dp"
                android:hint="目的地/景点/酒店/门票"
                android:singleLine="true"/>
            <ImageButton
                android:id="@+id/ib_news"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/news"/>
        </LinearLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="50dp"
            android:background="@mipmap/search"/>
    </RelativeLayout>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp">
        <TableRow>
            <com.zhaowh.travel.Custom.MyButton
                android:id="@+id/btn_plane"
                style="@style/MyMainFragmentButtonStyle"
                custom:iconBackground="@mipmap/menu_airport"
                custom:iconText="飞机票"
                custom:iconTextColor="#000000"
                custom:iconTextSize="5sp"></com.zhaowh.travel.Custom.MyButton>
            <com.zhaowh.travel.Custom.MyButton
                android:id="@+id/btn_hospital"
                style="@style/MyMainFragmentButtonStyle"
                custom:iconBackground="@mipmap/menu_hatol"
                custom:iconText="住酒店"
                custom:iconTextColor="#000000"
                custom:iconTextSize="5sp"></com.zhaowh.travel.Custom.MyButton>
            <com.zhaowh.travel.Custom.MyButton
                android:id="@+id/btn_travel"
                style="@style/MyMainFragmentButtonStyle"
                custom:iconBackground="@mipmap/menu_trav"
                custom:iconText="去旅游"
                custom:iconTextColor="#000000"
                custom:iconTextSize="5sp"></com.zhaowh.travel.Custom.MyButton>
            <com.zhaowh.travel.Custom.MyButton
                android:id="@+id/btn_near_travel"
                style="@style/MyMainFragmentButtonStyle"
                custom:iconBackground="@mipmap/menu_nearby"
                custom:iconText="周边游"
                custom:iconTextColor="#000000"
                custom:iconTextSize="5sp"></com.zhaowh.travel.Custom.MyButton>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <com.zhaowh.travel.Custom.MyButton
                android:id="@+id/btn_ticket"
                style="@style/MyMainFragmentButtonStyle"
                custom:iconBackground="@mipmap/menu_ticket"
                custom:iconText="买门票"
                custom:iconTextColor="#000000"
                custom:iconTextSize="5sp"></com.zhaowh.travel.Custom.MyButton>
            <com.zhaowh.travel.Custom.MyButton
                android:id="@+id/btn_train"
                style="@style/MyMainFragmentButtonStyle"
                custom:iconBackground="@mipmap/menu_train"
                custom:iconText="火车票"
                custom:iconTextColor="#000000"
                custom:iconTextSize="5sp"></com.zhaowh.travel.Custom.MyButton>
            <com.zhaowh.travel.Custom.MyButton
                android:id="@+id/btn_car"
                style="@style/MyMainFragmentButtonStyle"
                custom:iconBackground="@mipmap/menu_car"
                custom:iconText="汽车票"
                custom:iconTextColor="#000000"
                custom:iconTextSize="5sp"></com.zhaowh.travel.Custom.MyButton>
            <com.zhaowh.travel.Custom.MyButton
                android:id="@+id/btn_course"
                style="@style/MyMainFragmentButtonStyle"
                custom:iconBackground="@mipmap/menu_course"
                custom:iconText="领里程"
                custom:iconTextColor="#000000"
                custom:iconTextSize="5sp"></com.zhaowh.travel.Custom.MyButton>
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#D1C7C7" />



</RelativeLayout>